<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="css/bootstrap.min.css" rel="stylesheet">
        <link href="css/style.css" rel="stylesheet">
        <script src="js/usersChat.js"></script>
        <script src="js/workerTableCreator.js"></script>
        <title>Nutcrackers</title>
    </head>
    <body>
        <%- include /parts/navbar -%>
        <div class="row justify-content-center">
            <div class="marg-tables col-8">
                <p class="h4">Tables</p>
                <div class="investor-table border border-1" id="table">
                </div>
                <div class="form-height row">
                    <div class="col-2">
                        <button onclick="createWorkerTable()" type="button" class="btn btn-warning">Add new table</button>
                    </div>
                    <div class="col-3">
                        <button type="button" class="btn btn-warning">Change table</button>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <p class="h4">Chat</p>
                <div class="chat-scroll border border-1" id="chatid">
                </div>
                <div class="row">
                    <div class="col-10">
                        <input class="form-control form-control-lg " type="text" placeholder="massage" aria-label=".form-control-lg example" id="worker-massage">
                    </div>
                    <div class="col-2">
                        <button type="button" class="btn btn-warning" onclick="createWorkerMassage()">Send</button>
                    </div>
                </div>
                
            </div>
        </div>

        <script src="js/bootstrap.bundle.min.js"></script>
    </body>
</html>

